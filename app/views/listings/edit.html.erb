<div class="container">
  <div class="row">
    <div class="col-sm-10 col-offset-sm-2">
      <h1>Edit Listing</h1>
      <%= form_for @listing, :html => {:multipart => true} do |form| %>
      <%= render partial: 'listings/form', object: form %>
      <%= form.submit "Submit", class: "btn btn-primary col-sm-12" %>
      <% end %>
    <h1>Add more images</h1>
      <%= form_for @listing, url: listing_images_path(@listing), method: :post do |f| %> <!-- #use customized url endpoint  -->
    <%= f.file_field :images, multiple: true%>
    
    <button type="button" class="btn btn-info btn-lg" <%= f.submit "Add More Images" %> Add now</button>
    <% end %>
    </div>
    <!-- <div> -->
   <% @listing.images.each_with_index do |image, index| %> <!-- # grab the index -->
<!--     <div> -->
      <%= image_tag(image.url) %>
      <%= link_to "Delete", listing_image_path(@listing, index), :method => :delete, data: { confirm: "Are you sure you want to delete this image?" } %>
    <!-- </div> -->
    <% end %>
  <!-- </div> -->
</div>